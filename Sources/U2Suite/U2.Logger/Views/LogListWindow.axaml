<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:logger="clr-namespace:U2.Logger"
        mc:Ignorable="d" d:DesignWidth="450" d:DesignHeight="250"
		Width="450" Height="250"
        x:Class="U2.Logger.LogListWindow"
        Title="{Binding WindowTitle}">

	<Design.DataContext>
		<logger:DemoLogListViewModel/>
	</Design.DataContext>

	<Border Padding="10">
		<StackPanel Orientation="Vertical">
			<Border BorderThickness="1"
					Margin="5" Padding="15"
					CornerRadius="10"
					BorderBrush="White"
					DockPanel.Dock="Top">
				<ListBox Name="ListBoxLogs" 
						 Height="150" Width="410"
						 HorizontalAlignment="Stretch"
						 SelectionMode="Single"
						 Items="{Binding List, Mode=OneWay}"
						 SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
					 >
					<ListBox.ItemTemplate>
						<DataTemplate>
							<TextBlock Text="{Binding LogName}"></TextBlock>
						</DataTemplate>
					</ListBox.ItemTemplate>
				</ListBox>
			</Border>

			<logger:OkCancelButtonsUserControl></logger:OkCancelButtonsUserControl>
		</StackPanel>
	</Border>
</Window>
