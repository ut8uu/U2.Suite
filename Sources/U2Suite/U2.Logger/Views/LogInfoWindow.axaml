<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:logger="clr-namespace:U2.Logger"
        xmlns:core="clr-namespace:U2.Core;assembly=U2.Core"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="380"
		Width="500" Height="380"
        x:Class="U2.Logger.LogInfoWindow"
		ShowInTaskbar="False"
		CanResize="False"
		WindowStartupLocation="CenterOwner"
        Title="{Binding WindowTitle}">

	<Design.DataContext>
		<logger:DemoLogInfoWindowViewModel/>
	</Design.DataContext>

	<Border Padding="10">
		<StackPanel Orientation="Vertical">
			<logger:LogInfoUserControl></logger:LogInfoUserControl>

			<Border Padding="30 0 0 0" DockPanel.Dock="Bottom">
				<StackPanel Orientation="Horizontal" Height="30">
					<Button Name="OkButton" Margin="3 1"
							Command="{Binding ExecuteOkAction}"
							Content="{Binding OkButtonTitle}"></Button>
					<Button Name="CancelButton" IsDefault="True" Margin="3 1"
							Command="{Binding CloseWindow}"
							Content="{Binding CancelButtonTitle}"></Button>
				</StackPanel>
			</Border>
		</StackPanel>
	</Border>
</Window>
