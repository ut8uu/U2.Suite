<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="110"
             Width="500" Height="110"
             x:Class="U2.Logger.FuncButtonsPanel"
             xmlns:logger="clr-namespace:U2.Logger">
  <Design.DataContext>
    <logger:LoggerMainWindowViewModel/>
  </Design.DataContext>

  <Border Classes="Card">
    <StackPanel>
      <StackPanel Orientation="Horizontal">
        <Button Margin="3 1" Command="{Binding Wipe}" Content="{Binding WipeButtonTitle}"></Button>
          <Button Margin="3 1" Command="{Binding Save}" Content="{Binding SaveButtonTitle}"></Button>
      </StackPanel>
    </StackPanel>
  </Border>
</UserControl>
