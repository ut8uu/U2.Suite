<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="50"
             xmlns:logger="clr-namespace:U2.Logger"
			 x:Class="U2.Logger.OkCancelButtonsUserControl">
	<Design.DataContext>
		<logger:DemoOkCancelViewModel/>
	</Design.DataContext>
	<Border DockPanel.Dock="Bottom">
		<StackPanel Orientation="Horizontal" Height="30">
			<Button Name="OkButton" Margin="3 1"
					Command="{Binding ExecuteOkAction}"
					Content="{Binding OkButtonTitle}"></Button>
			<Button Name="CancelButton" IsDefault="True" Margin="3 1"
					Command="{Binding CloseWindow}"
					Content="{Binding CancelButtonTitle}"></Button>
		</StackPanel>
	</Border>
</UserControl>
