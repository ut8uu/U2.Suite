<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="U2.Library.Views.Rigs">

  <Border Padding="10">
    <DockPanel>
      <StackPanel
        DockPanel.Dock="Left"
        Width="200">
        <TextBlock>Vendor</TextBlock>
        <ComboBox Items="{Binding Path=Vendors, Mode=TwoWay}"
                      SelectedIndex="{Binding SelectedVendorIndex, Mode=TwoWay}">
          <ComboBox.ItemTemplate>
            <DataTemplate>
              <TextBlock Text="{Binding Name}" Margin="5 0"></TextBlock>
            </DataTemplate>
          </ComboBox.ItemTemplate>
        </ComboBox>
      </StackPanel>
      <StackPanel>

      </StackPanel>
    </DockPanel>
  </Border>
</UserControl>
