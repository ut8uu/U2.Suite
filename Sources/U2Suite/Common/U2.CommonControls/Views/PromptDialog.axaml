<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Width="500" Height="150"
        x:Class="U2.CommonControls.PromptDialog"
        Title="PromptDialog">
  <StackPanel Margin="5">
    <TextBlock Margin="5" Classes="font20" Name="PromptText" Text="Prompt text"/>
    <TextBox Margin="5" Name="PromptResponse" Text="Prompt response"/>
    <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
      <Button Content="_Ok" IsDefault="True" Margin="5" Name="OkButton" />
      <Button Content="_Cancel" IsCancel="True" Margin="5" Name="CancelButton" />
    </StackPanel>
  </StackPanel>
</Window>
