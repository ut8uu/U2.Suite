    <AvaloniaResource Include="Styles\Citrus\Palette\CitrusPalette.xaml" />
    <AvaloniaResource Include="Styles\Citrus\Palette\MagmaPalette.xaml" />
    <AvaloniaResource Include="Styles\Citrus\Palette\RustPalette.xaml" />
