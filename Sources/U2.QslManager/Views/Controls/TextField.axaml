<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="50"
             x:Class="U2.QslManager.TextField"
             Height="25"
             >
  <Grid ColumnDefinitions="100,100,*">
    <TextBlock Grid.Column="0" Grid.Row="0" Classes="font20 bold" Text="{Binding Title}" Padding="10 2"></TextBlock>
    <TextBlock Grid.Column="1" Grid.Row="0" Classes="font20" Text="{Binding Text}" Padding="10 2"></TextBlock>
    <Button Grid.Column="2" Grid.Row="0" Content="..." ToolTip.Tip="Edit this field."></Button>
  </Grid>
</UserControl>
